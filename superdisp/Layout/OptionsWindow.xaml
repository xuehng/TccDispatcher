                                                            </Image.Style>
                                                        </Image>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn DisplayMemberBinding="{Binding Path=Name}" Header="名称" />
                                            <GridViewColumn DisplayMemberBinding="{Binding Path=Priority}" Header="优先级" />
                                        </GridView.Columns>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                            <Button Grid.Row="1"
                                    Height="30"
                                    Margin="0,0,5,0"
                                    Content="上移"
                                    FontFamily="/SupernovaDispatcher;component/Fonts/#FZYaoTi" />
                            <Button Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="0,0,5,0"
                                    Content="下移"
                                    FontFamily="/SupernovaDispatcher;component/Fonts/#FZYaoTi" />
                            <Button Grid.Row="1"
                                    Grid.Column="2"
                                    Margin="0,0,5,0"
                                    Content="启用"
                                    FontFamily="/SupernovaDispatcher;component/Fonts/#FZYaoTi" />
                            <Button Grid.Row="1"
                                    Grid.Column="3"
                                    Content="禁用"
                                    FontFamily="/SupernovaDispatcher;component/Fonts/#FZYaoTi" />
                        </Grid>
                    </Grid>
                </TabItem>
            </TabControl>
            <StackPanel Grid.Row="1"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                <Button x:Name="btnOK"
                        Width="150"
                        Height="50"
                        Margin="0,0,10,0"
                        Click="BtnOkClick"
                        FontFamily="/SupernovaDispatcher;component/Fonts/#FZYaoTi"
                        FontSize="16"
                        IsDefault="True">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Margin="0,0,10,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="保存" />
                        <Image Grid.Column="1"
                               Width="32"
                               Height="32"
                               Margin="0,0,10,0"
                               Source="/SupernovaDispatcher;component/Resources/save_3.png"
                               Stretch="Fill"
                               UseLayoutRounding="True" />

                    </Grid>
                </Button>
                <Button x:Name="btnCancel"
                        Width="150"
                        Height="50"
                        Margin="0,0,10,0"
                        Click="BtnCancelClick"
                        FontFamily="/SupernovaDispatcher;component/Fonts/#FZYaoTi"
                        FontSize="16"
                        IsCancel="True"
                        IsDefault="True">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Margin="0,0,10,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="关闭" />
                        <Image Grid.Column="1"
                               Width="32"
                               Height="32"
                               Margin="0,0,10,0"
                               Source="/SupernovaDispatcher;component/Resources/cancel_48.ico"
                               Stretch="Fill"
                               UseLayoutRounding="True" />

                    </Grid>
                </Button>
                <Button x:Name="btnKeyboard"
                        Width="50"
                        Height="50"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch"
                        Click="BtnKeyboardClick"
                        Padding="0">
                    <Grid Height="50"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center">
                        <Image Height="50"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               RenderTransformOrigin="0.5,0.5"
                               Source="/SupernovaDispatcher;component/Resources/keyboard.ico">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform />
                                    <SkewTransform />
                                    <RotateTransform />
                                    <TranslateTransform Y="-3" />
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>
                    </Grid>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>